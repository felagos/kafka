{
  "name": "kafka-typescript-client",
  "version": "1.0.0",
  "description": "TypeScript client for Kafka",
  "main": "index.js",
  "type": "module",
  "engines": {
    "bun": ">=1.0.0"
  },  "scripts": {
    "build": "bun build ./client.ts --outdir ./dist --target bun",
    "build:producer": "bun build ./client-producer.ts --outdir ./dist-producer --target bun",
    "start": "bun run client.ts",
    "start:producer": "bun run client-producer.ts"
  },
  "dependencies": {
    "kafkajs": "^2.2.4"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "ts-node": "^10.9.1",
    "@types/node": "^18.15.0"
  }
}
